<h1>
		<%if @projects.size == 1 %>
			<%="Projekt" %>
		<% else %>
			<%= "Projekte" %>
		<% end %>
</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Start Date</th>
			<th>Tasks</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do | var | %>
			<tr>
				<td><%= var.title %></td>
				<td><%= var.description %></td>
				<td><%= var.start_date %></td>
				<td></td>
				<td><%= link_to "<i class='fi-eye'></i>".html_safe, project_path(var.id) %></td>
				<td><%= link_to "<i class='fi-pencil'></i>".html_safe, edit_project_path(var.id) %></td>
				<td><%= link_to "<i class='fi-trash'></i>".html_safe, project_path(var.id), method: :delete, data: {confirm: "Sind sie sicher?"} %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "Neues Projekt anlegen", new_project_path %>